<%- include('src/head'); -%>
<link rel="stylesheet" href="/style/st3.css" />
<div class="main">
            <div class="cpanel__list__title">
                Quản Lý Tất Cả Chương
            </div>
            <div class="cpanel__list__container">

                <% listChapter.forEach((chap,index)=>{ %>

                <div class="cpanel__list__item">
                    <div class="item__stt">
                        <%- index+1 -%>
                    </div>
                    <div class="item__title">
                        <a href="/cpanel/chapters/<%-chap.id-%>">
                            <%if(chap.shown==0){ %>
                                <font color="red">
                            <% } %>
                        <%- chap.title -%>
                        <%if(chap.shown==0){ %>
                        </font>
                        <% } %>
                        </a>
                    </div>
                    <div class="item__menu">
                        <div class="item__menu__box">
                            <a href="/cpanel/edit_chapter/<%- chap.id -%>"><img src="/img/edit.png" width="20px"></a>
                            <%if(chap.shown==1){ %> 
                                <a href="/chapters/<%-chap.id-%>/unshown"><img src="/img/shown.png" width="20px"></a>
                                <% } else { %>
                                <a href="/chapters/<%-chap.id-%>/shown"><img src="/img/unshown.png" width="20px"></a>
                                <% } %>
                            <a href="/chapter/<%-chap.id-%>/delete"><img src="/img/ic-remove.png" width="20px"></a>
                        </div>
                    </div>
                    
                </div>

            <% }) %>



            </div>  
            <div class="cpanel__list__menu">
                <a href="/cpanel/add_chapter"><button class="bttadd">Thêm Chương</button></a>
            </div>
            
</div>
<%- include('src/foot'); -%>